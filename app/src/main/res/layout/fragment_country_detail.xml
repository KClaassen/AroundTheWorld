<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="country"
            type="com.example.android.capstoneproject_aroundtheworld.models.Country" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/country_capital_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".countries.detail.CountryDetailFragment">

        <TextView
            android:id="@+id/country_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:textSize="36sp"
            android:textStyle="bold"
            android:hint="test"
            android:text="@{country.name}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/country_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginTop="150dp"
            android:text="@string/country_name_label"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/country_capital_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginTop="16dp"
            android:text="@string/country_capital_label"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/country_name_label" />

        <TextView
            android:id="@+id/country_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:text="@{country.name}"
            android:hint="test"
            app:layout_constraintBaseline_toBaselineOf="@+id/country_name_label"
            app:layout_constraintStart_toEndOf="@+id/country_name_label" />

        <TextView
            android:id="@+id/country_capital_text_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:text="@{country.capital}"
            android:hint="test"
            app:layout_constraintBaseline_toBaselineOf="@+id/country_capital_label"
            app:layout_constraintStart_toEndOf="@+id/country_capital_label" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>