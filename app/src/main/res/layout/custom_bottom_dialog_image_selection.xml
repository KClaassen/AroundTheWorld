<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/custom_dialog_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/custom_dialog"
        android:layout_marginTop="@dimen/custom_dialog"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/outline_photo_camera_24" />

    <TextView
        android:id="@+id/photo_from_camera"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/standart_margin"
        android:layout_marginTop="@dimen/standard_margin_24"
        android:text="@string/capture_photo_from_camera"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/custom_dialog_camera"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/custom_dialog_gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/standard_margin_24"
        android:layout_marginTop="@dimen/standard_margin_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/custom_dialog_camera"
        app:srcCompat="@drawable/outline_collections_24" />

    <TextView
        android:id="@+id/select_from_gallery"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/standart_margin"
        android:layout_marginTop="@dimen/standard_margin_24"
        android:paddingBottom="@dimen/standard_margin_24"
        android:text="@string/select_photo_from_gallery"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/custom_dialog_gallery"
        app:layout_constraintTop_toBottomOf="@+id/photo_from_camera" />

</androidx.constraintlayout.widget.ConstraintLayout>